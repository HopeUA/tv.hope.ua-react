{
  "name": "tv.hope.ua",
  "description": "Tv.Hope.UA on React",
  "author": "Sergey Sadovoi <sergey@hope.ua>",
  "version": "3.0.0-dev",
  "homepage": "https://tv.hope.ua",
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "license": "MIT",
  "main": "bin/server.js",
  "scripts": {
    "start": "better-npm-run start-prod",
    "build": "better-npm-run build",
    "postinstall": "npm run build",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "eslint src",
    "lint-css": "scss-lint -c .sass-lint.yml",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "test": "karma start",
    "test-node": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register",
    "test-node-watch": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register --watch",
    "generate:component": "yo hope:component"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "better-npm-run": "0.0.8",
    "body-parser": "^1.14.1",
    "classnames": "^2.2.3",
    "css-loader": "^0.23.1",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "i18next": "^2.5.0",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lru-memoize": "^1.0.0",
    "map-props": "^1.0.0",
    "merge": "^1.2.0",
    "moment": "^2.12.0",
    "node-sass": "^3.7.0",
    "piping": "^0.3.0",
    "postcss-loader": "^0.8.1",
    "pretty-error": "^2.0.0",
    "raw-loader": "^0.5.1",
    "react": "^15.0.1",
    "react-addons-css-transition-group": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-google-tag-manager": "^1.1.0",
    "react-helmet": "^3.0.1",
    "react-i18next": "^1.3.0",
    "react-inline-css": "^2.0.0",
    "react-maskedinput": "^3.1.2",
    "react-motion": "^0.4.4",
    "react-redux": "^4.4.2",
    "react-router": "^2.1.1",
    "react-router-redux": "^4.0.2",
    "react-swipeable-views": "^0.7.5",
    "redux": "^3.4.0",
    "redux-async-connect": "1.0.0-rc2",
    "redux-responsive": "^2.0.0",
    "redux-thunk": "^2.0.1",
    "sass-loader": "^3.1.2",
    "scroll-behavior": "^0.3.4",
    "serialize-javascript": "^1.1.2",
    "string": "^3.3.1",
    "strip-loader": "^0.1.0",
    "style-loader": "^0.13.1",
    "urijs": "^1.17.1",
    "url-loader": "^0.5.7",
    "warning": "^2.1.0",
    "webpack": "^1.12.15"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "clean-webpack-plugin": "^0.1.6",
    "concurrently": "^2.0.0",
    "eslint-config-hope": "^2.6.1",
    "eslint-loader": "^1.0.0",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
